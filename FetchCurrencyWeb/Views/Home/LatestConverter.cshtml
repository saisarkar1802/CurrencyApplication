@model FetchCurrencyWeb.Models.AppModel

@{
    ViewData["Title"] = "LatestConverter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>LatestConverter</h1>

<h4>AppModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LatestConverter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="baseCurrency" class="control-label"></label>
                <input asp-for="baseCurrency" class="form-control" />
                <span asp-validation-for="baseCurrency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="baseAmount" class="control-label"></label>
                <input asp-for="baseAmount" class="form-control" />
                <span asp-validation-for="baseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="toCurrency" class="control-label"></label>
                <input asp-for="toCurrency" class="form-control" />
                <span asp-validation-for="toCurrency" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
